<div class="wrapper">
  <h1>Calendar</h1>
  <%= month_calendar events: @availabilities, attribute: :date do |date, availabilities| %>
  <%= date %>

  <% availabilities.each do |availability| %>
  <div class="day-applied">
    <i class="fab fa-angellist"></i>
  </div>
  <% end %>
  <% end %>


  <%= simple_form_for @availability do |f| %>
  <%= f.input :date,
  as: :string,
  required: true,
  input_html: {id: "availability_date"} %>
  <%= f.button :submit, "Add Availability" %>
  <% end %>

  <%= link_to "Back to Dashboard", dashboard_path, class:"btn btn-default"  %>

</div>


