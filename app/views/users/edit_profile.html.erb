<div class="container">
  <%= simple_form_for @user, url: update_profile_url, method: :patch do |f| %>
  <%= cl_image_tag @user.photo.url(:avatar)  %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :first_name,
  input_html: { autocomplete: "First name" }%>
  <%= f.input :age,
  input_html: { autocomplete: "Age" }%>
  <%= f.input :gender,
  collection: User::GENDERS,
  input_html: { autocomplete: "Gender" }%>
  <%= f.input :location,
  collection: User::LOCATIONS,
  input_html: { autocomplete: "Location" }%>
  <%= f.button :submit, "Update", class: "btn btn-primary home-btn" %>
  <% end %>
</div>


