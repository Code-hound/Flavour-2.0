<div class="attendee">
    <h4 class="attendee-name text-center"> <%= attendee.user.first_name %></h4> <br>
    <div class="attendee-pic">
      <%= cl_image_tag attendee.user.photo, :transformation=>[
      {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
      {:width=>100, :crop=>"scale"}
      ] %>
      <%= link_to "send contacts",  share_contact_path(attendee.meal, attendee.user), class: "btn btn-primary sign-up-btn"  %>
    </div>
</div>

